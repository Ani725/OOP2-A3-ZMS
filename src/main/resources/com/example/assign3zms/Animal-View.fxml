<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="415.0" prefWidth="479.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assign3zms.Controllers.AnimalViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <AnchorPane prefHeight="422.0" prefWidth="481.0">
            <children>
                <Label layoutX="70.0" layoutY="116.0" text="Animal Type:" />
                <Label layoutX="102.0" layoutY="171.0" text="Name" />
                <Label layoutX="106.0" layoutY="232.0" text="Age:" />

                <Label layoutX="140.0" layoutY="14.0" text="Animal view">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>

                <Button fx:id="SaveButton" layoutX="92.0" layoutY="311.0" mnemonicParsing="false" onAction="#onSaveButtonClick" text="Save" />
                <Button fx:id="CancelButton" layoutX="194.0" layoutY="311.0" mnemonicParsing="false" onAction="#onCancelButtonClick" text="Cancel" />
                <Button fx:id="DeleteButton" layoutX="296.0" layoutY="311.0" mnemonicParsing="false" onAction="#onDeleteButtonClick" text="Delete" />
                <TextField fx:id="animalType" layoutX="158.0" layoutY="112.0" />
                <TextField fx:id="nameField" layoutX="158.0" layoutY="167.0" />
                <TextField fx:id="ageField" layoutX="158.0" layoutY="228.0" />
            </children>
        </AnchorPane>
    </children>
</VBox>
